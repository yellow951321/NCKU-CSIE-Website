append title
  +title( i18n[ language ].title )

append stylesheets
  +css( '/login/index' )

append header

append content
  //- page login
  form#login.login( method = 'post' )
    h1.login__title= i18n[ language ][ 'login' ].title
    input.login__input.login__input--account( type = 'text', name = 'account', placeholder = i18n[ language ][ 'login' ].account )
    input.login__input.login__input--password( type = 'password', name = 'password', placeholder = i18n[ language ][ 'login' ].password )
    p.login__reset.login__reset--hidden= i18n[ language ][ 'login' ].reset
    a.login__forget( href = '' )= i18n[ language ][ 'login' ].forget
    section.login__verification
    p.login__error.login__error--hidden= i18n[ language ][ 'login' ].error
    input.login__button(type = 'submit', value = i18n[ language ][ 'login' ].button, disabled)
  //- page forget
  form#forget.forget.forget--hidden( method = 'post' )
    h1.forget__title= i18n[ language ][ 'forget' ].title
    p.forget__description= i18n[ language ][ 'forget' ].description
    input.forget__input.forget__input--account( type = 'text', name = 'account', placeholder = i18n[ language ].account)
    input.forget__button( type = 'submit', value = i18n[ language ][ 'forget' ].button, disabled)
    p.forget__error.forget__error--hidden= i18n[ language ][ 'forget' ].error
    p.forget__reminder= i18n[ language ][ 'forget' ].reminder
      a.text(href='')= i18n[ language ][ 'forget' ][ 'administration staff' ]
  //- page verifyrify
  form#verify.verify.verify--hidden( method = 'post' )
    h1.verify__title= i18n[ language ][ 'verify' ].title
    p.verify_reminder.verify__reminder--1= i18n[ language ][ 'verify' ].reminder1
    p.verify_reminder.verify__reminder--2= i18n[ language ][ 'verify' ].reminder2
      a(href='#')= i18n[ language ][ 'verify' ].link
    input.verify__verify( type = 'text', name = 'verify_code', placeholder = i18n[ language ][ 'verify' ].verify )
    p.verify__error.verify__error--hidden= i18n[ language ][ 'verify' ].error
    input.verify__button( type = 'submit', value = i18n[ language ][ 'verify' ].button, disabled )
  //- page reset
  form#reset.reset.reset--hidden( method = 'post' )
    h1.reset__title= i18n[ language ][ 'reset' ].title
    input.reset__input( type = 'password', name = 'newPassword', placeholder = i18n[ language ][ 'reset' ].input )
    input.reset__input.reset__input--check( type = 'password', name = 'check', placeholder = i18n[ language ][ 'reset' ].check )
    p.reset__error.reset__error--hidden= i18n[ language ][ 'reset' ].error
    input.reset__button( type = 'submit', value = i18n[ language ][ 'reset' ].button )

